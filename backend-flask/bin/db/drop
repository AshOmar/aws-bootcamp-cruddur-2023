#! /usr/bin/bash
set +e
BRED='\033[1;31m'
NC='\033[0m' # No Color
exitstatus=0
echo -e "\n${BRED}=== DB Drop Start ===${NC}\n"
successError="does not exist"
NODBURL=$(sed 's/\/cruddur//g' <<<"$CONNECTION_URL")
result=$(psql $NODBURL -c "DROP DATABASE cruddur;" 2>&1  )
exitstatus=$?

if [ $exitstatus -ne 0 ]; then
 if [[ "$result" == *"$successError"* ]];then
  exitstatus=0
 fi
fi
echo $result
echo -e "\n${BRED}=== DB Drop Finish ===${NC}\n"
set -e

exit $exitstatus